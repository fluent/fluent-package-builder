/var/log/<%= compat_package_dir %>/<%= service_name %>.log {
  daily
  rotate 30
  compress
  delaycompress
  notifempty
  create 640 <%= service_name %> <%= service_name %>
  sharedscripts
  postrotate
    pid=/var/run/<%= package_dir %>/<%= service_name %>.pid
    if [ -s "$pid" ]
    then
      kill -USR1 "$(cat $pid)"
    fi
  endscript
}
