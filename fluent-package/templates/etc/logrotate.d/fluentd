/var/log/<%= package_dir %>/<%= service_name %>.log {
  daily
  rotate 30
  compress
  delaycompress
  notifempty
  create 640 _<%= service_name %> _<%= service_name %>
  sharedscripts
  postrotate
    pid=/var/run/<%= package_dir %>/<%= service_name %>.pid
    if [ -s "$pid" ]
    then
      kill -USR1 "$(cat $pid)"
    fi
  endscript
}
